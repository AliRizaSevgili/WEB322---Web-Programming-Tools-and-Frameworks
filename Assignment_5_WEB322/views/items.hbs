{{!-- layout: 'main' --}}
<div class="container">
  <h2>Items</h2>
  <a href="/items/add" class="btn btn-success pull-right">Add Item</a>
  <br /><br />
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Item ID</th>
          <th>Item Name</th>
          <th>Price</th>
          <th>Category</th>
          <th>Published</th>
          <th>Image</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each items}}
        <tr>
          <td><a href="/item/{{id}}">{{id}}</a></td>
          <td>{{title}}</td>
          <td>{{formatCurrency price}}</td>
          <td>{{category.name}}</td>
          <td>{{#if published}}Yes{{else}}No{{/if}}</td>
          <td>
            {{#if featureImage}}
              <img src="{{featureImage}}" alt="{{title}}" style="width: 100px; height: auto;" />
            {{else}}
              <span>No Image</span>
            {{/if}}
          </td>
          <td>
            <a href="/items/delete/{{id}}" class="btn btn-danger">Remove</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{#unless items}}
  <div class="text-center alert alert-warning">
    <strong>No items found.</strong>
  </div>
  {{/unless}}
</div>
