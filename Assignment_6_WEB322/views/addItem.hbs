{{!-- layout: 'main' --}}
<div class="container" style="padding-top: 90px;">
  <div class="row">
    <div class="col-md-12">
      <h2>Add a New Item</h2>
      <a href="/items" class="btn btn-secondary pull-right">Back to Items</a>
      <br /><br />
      <form method="post" action="/items/add" enctype="multipart/form-data">
        <fieldset>
          <legend>Feature Image</legend>
          <input class="form-control" id="featureImage" name="featureImage" type="file" />
        </fieldset>
        <br />
        <fieldset>
          <legend>Post Content</legend>
          <label for="title">Item Name:</label>
          <input class="form-control" id="title" name="title" type="text" required />
          <label for="price">Price:</label>
          <input class="form-control" id="price" name="price" type="number" step="0.01" required />
          <label for="body">Description:</label>
          <textarea class="form-control" id="body" name="body" rows="15" required></textarea>
          <label for="category">Category:</label>
          {{#if categories}}
          <select class="form-control" name="category" id="category" required>
            <option value="">Select Category</option>
            {{#each categories}}
              <option value="{{id}}">{{category}}</option>
            {{/each}}
          </select>
          {{else}}
          <div>No Categories</div>
          {{/if}}
          <div class="form-check mt-3">
            <input type="checkbox" class="form-check-input" name="published" id="published" />
            <label class="form-check-label" for="published">Published</label>
          </div>
        </fieldset>
        <br />
        <button type="submit" class="btn btn-primary">Add Item</button>
      </form>
    </div>
  </div>
</div>
